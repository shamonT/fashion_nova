<section class="cart_area">
    <div class="container mt-5">
        <div class="cart_inner">
            <div class="table-responsive mt-5" >
  
                    <table id="myDiv" class="table mt-5">
                <thead>
                    <tr>
                        <th scope="col">Product</th>
                        <th scope="col">Name</th>
                        <th scope="col">Price</th>
                        
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    <hr>
                    {{#each products}}
                    <tr>
                   
                        <td>
                            <div class="media">
                                <div class="d-flex">
                                    <img src="/uploads/{{this.products.Image.[0]}}" style="width: 175px;height:175px"
                                        alt="">
                                </div>
                        </td>
                        <td>

                            <h5>{{this.products.Name}}</h5>
                          
                        </td>



                        <td>
                            <h5>{{this.products.Price}}</h5>
                        </td>
                        
                       

                        <td>
                            <div>
                            <button class="btn btn-danger ml-3 float-right"
                                onclick="deleteProduct('{{this._id}}','{{this.products._id}}')">
                                Remove
                            </button>
                            </div>
                            <div>
                            <button class="btn btn-danger ml-3 float-right"
                              onclick="addToCart('{{this.products._id}}')">
                              Add to cart
                            </button>
                            </div>
                        </td>
                    </tr>
                    {{/each}}


                   
                 
                   
                    





