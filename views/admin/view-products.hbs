   {{!-- <div id="right-panel" class="right-panel"> --}}
    <div class="content">
        <div class="row">
           <a href="/admin/add-products" class="btn btn-success ml-auto">Add Product</a> 
        </div>
            <div class="animated fadeIn">
                <div class="row">
                    <div class="col-lg-6">
                        {{!-- <div class="card">
                            <div class="card-header"> --}}
                                <strong class="card-title">Product Table</strong>
                            </div>
                            <div class="table-stats order-table ov-h">
                                <table class="table  " >
                                    <thead>
                                        <tr>
                                            <th class="serial">#</th>
                                            <th class="avatar">Avatar</th>
                                            <th>ID</th>
                                            <th>Product Name</th>
                                            <th>Brand</th>
                                            <th>Category</th>
                                            <th>Quantity</th>
                                            <th>Price</th>
                                            <th>Description</th>
                                            <th>Delete</th>
                                            <th>Edit</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each products}}
                                        <tr>
                                            <td >{{inc @index}}</td>
                                            <td class="avatar">
                                                <div class="round-img">
                                                    <a href="#"><img class="rounded-circle" src="/uploads/{{this.Image.[0]}}" style="width: 150px;height:80px" alt=""></a>
                                                </div>
                                            </td>
                                            <td> {{this._id}} </td>
                                            <td>  <span class="Product Name">{{this.Name}}</span> </td>
                                            <td> <span class="Brand">{{this.Brand}}</span> </td>
                                            <td><span class="Category">{{this.Category}}</span></td>
                                            <td><span class="Quantity">{{this.Quantity}}</span></td>
                                             <td><span class="Price">{{this.Price}}</span></td>
                                              <td><span class="Decription">{{this.Description}}</span></td>
                                              
                                               <td>
                                                <a href="/admin/edit-products/{{this._id}}" class="btn btn-primary" >Edit</a></td>
                                              <td> 
                                                <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this item{{this.name}}')" >Delete</a>
                                                
                                                </td>
                                        </tr>
                                       {{/each}}
                                      
                                    </tbody>
                                </table>
                            {{!-- </div>
                        </div> <!-- /.table-stats --> --}}
                        </div>
                    </div>
                   

        </div>
    </div><!-- .animated -->
</div><!-- .content -->

