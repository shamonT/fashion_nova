   {{!-- <div id="right-panel" class="right-panel"> --}}
    <div class="content">
        <div class="row">
           <a href="/admin/add-category" class="btn btn-success ml-auto">Add category</a> 
        </div>
            <div class="animated fadeIn">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="card">
                            <div class="card-header">
                                <strong class="card-title">Category Table</strong>
                            </div>
                            <div class="table-stats order-table ov-h mr-5">
                                <table class="table  " >
                                    <thead>
                                        <tr>
                                            <th class="serial">#</th>
                                            
                                           
                                            <th>Product Name</th>
                                           
                                            <th>Delete</th>
                                            
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#if message}}
                                        <h5 class="ml-5"> Already exist</h5>
                                        {{else}}
                                         <h5 class="ml-5"> succesfully added</h5>

                                      {{/if}}

                                        {{#each category}}
                                        <tr>
                                            <td >{{inc @index}}</td>
                                           
                                           
                                            
                                            <td>  <span class="Product Name">{{this.Category}}</span> </td>
                                            
                                              
                                              <td> 
                                                <a href="/admin/delete-category/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this item,if confirmed you cannot revert it back{{this.name}}')" >Delete</a>
                                                
                                                </td>
                                        </tr>
                                       {{/each}}
                                      
                                    </tbody>
                                </table>
                            {{!-- </div>
                        </div> <!-- /.table-stats --> --}}
                        </div>
                    </div>
                   

        </div>
    </div><!-- .animated -->
</div><!-- .content -->
